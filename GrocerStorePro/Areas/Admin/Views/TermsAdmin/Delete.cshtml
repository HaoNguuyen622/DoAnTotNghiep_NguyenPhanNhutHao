@model Models.EF.Term

@{
    ViewBag.Title = "Xóa thông tin danh mục " + Model.term_name;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="card">
        <div class="card-header">
            @ViewBag.Title <br /> <br />
            <button class="btn btn-danger" onclick="history.back()"><i class="fa fa-arrow-circle-left"></i>&nbsp;Trở về</button>
        </div>
        <div class="card-body">

            <h3>Bạn có chắc chắn muốn xóa danh mục này?</h3>
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        <b>Tên danh mục</b>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.term_name)
                    </dd>


                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Xóa vĩnh viển" class="btn btn-danger" />
                    </div>
                }
            </div>

        </div>
    </div>

</section>

