@using Models.EF;
@{
    EcommerceDataEntities db = new EcommerceDataEntities();
}
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Tất cả danh mục</span>
                    </div>
                    <ul>
                        @foreach (var item in db.Terms.Where(t => t.term_item == 1))
                        {
                        <li><a href="@Url.Action("GetProductByCategoryId", "Product", new { id = item.ID})">@item.term_name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="@Url.Action("GetProductByKey", "Product")" autocomplete="off">
                            <input type="text" placeholder="Nhập từ khóa: tên sản phẩm,..." name="key">
                            <button type="submit" class="site-btn">TÌM NGAY</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>0924404019</h5>
                            <span>hỗ trợ 24/24</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
