@using Models.EF;
@{
    ViewBag.Title = "Trang chủ";
    EcommerceDataEntities db = new EcommerceDataEntities();
}
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Danh mục</span>
                    </div>
                    <ul>
                        @foreach (var item in db.Terms.Where(t => t.term_item == 1))
                        {
                            <li><a href="@Url.Action("GetProductByCategoryId", "Product", new { id = item.ID})">@item.term_name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            
                            <input type="text" placeholder="Bạn muốn mua gì?">
                            <button type="submit" class="site-btn">TÌM NGAY</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>0924404019</h5>
                            <span>hỗ trợ 24/24</span>
                        </div>
                    </div>
                </div>
                <div class="hero__item set-bg" data-setbg="/Content/Layout/img/hero/banner.jpg">
                    <div class="hero__text">
                        <span>FRUIT FRESH</span>
                        <h2>Vegetable <br />100% Organic</h2>
                        <p>Free Pickup and Delivery Available</p>
                        <a href="#" class="primary-btn">SHOP NOW</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @Html.Action("PromotionProduct", "Home")
            </div>
        </div>
    </div>
</section>
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm nổi bật</h2>
                </div>
                <div class="featured__controls">
                    @*<ul>
                        <li class="active" data-filter="*">All</li>
                        @foreach (var item in db.Terms.Where(t => t.term_item == 1).OrderByDescending(t => t.Groups.Count()).Take(4))
                        {
                            <li data-filter=".fresh-meat">@item.term_name</li>
                        }
                    </ul>*@
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @Html.Action("NewProduct", "Home")
        </div>
    </div>
</section>